<UserControl x:Class="UserControls.AudioPartUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Padding="5"
             mc:Ignorable="d" d:DesignWidth="300" VerticalAlignment="Top">
    <UserControl.Effect>
        <DropShadowEffect Color="#FF363636" BlurRadius="3"/>
    </UserControl.Effect>
        <Grid Background="{StaticResource GrayBlueGradientBrush}">
        <Slider Margin="10,57,10,10" VerticalAlignment="Top"/>
        <Button x:Name="AddBtn" Content="Add" VerticalAlignment="Top" Width="75" HorizontalAlignment="Right" FontFamily="Tahoma" FontWeight="Bold"/>
    </Grid>
</UserControl>
