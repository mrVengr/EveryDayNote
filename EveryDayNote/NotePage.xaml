<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EveryDayNote" x:Class="EveryDayNote.NotePage"
        Title="NotePage" Height="600" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Height="112" Margin="2,0" RenderTransformOrigin="-1.226,-0.492" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="Add" Height="25" UseLayoutRounding="True" Margin="2">
                <MenuItem Header="Text" x:Name="Text" Click="Text_Click" />
                <MenuItem Header="Audio"  x:Name="Voice" Click="Voice_Click"/>
                <MenuItem Header="Video" x:Name="Video" Click="Video_Click"/>
                <MenuItem Header="Picture" x:Name="Picture" Click="Picture_Click"/>

            </MenuItem>
            <DocumentViewer VerticalAlignment="Top"/>
        </Menu>

    </Grid>
</Window>
