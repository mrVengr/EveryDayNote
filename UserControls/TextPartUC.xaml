<UserControl x:Class="UserControls.TextPartUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Padding="5"
             d:DesignHeight="300" d:DesignWidth="300" VerticalAlignment="Top" Loaded="UserControl_Loaded">
    <UserControl.Effect>
        <DropShadowEffect Color="#FF363636" BlurRadius="3"/>
    </UserControl.Effect>
    <Grid Background="{StaticResource GrayBlueGradientBrush}">
        <Border  BorderThickness="3" Margin="10,10,10,10" BorderBrush="{StaticResource BorderGradientBrush}" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4"/>
            </Border.Effect>

            <TextBox  Name="TextData" Margin="10" BorderThickness="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" TextChanged="TextData_TextChanged"/>

        </Border>
    </Grid>
</UserControl>
