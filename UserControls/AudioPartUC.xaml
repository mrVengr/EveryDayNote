<UserControl x:Class="UserControls.AudioPartUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Padding="2"
             mc:Ignorable="d" d:DesignWidth="300" VerticalAlignment="Top">
    <Grid TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}">
        <Slider Margin="10,60,10,10" VerticalAlignment="Top"/>
        <Button x:Name="AddBtn" Margin="5" Content="Add" VerticalAlignment="Top" Width="75" HorizontalAlignment="Right" FontFamily="Tahoma" FontWeight="Bold"/>
    </Grid>
</UserControl>
